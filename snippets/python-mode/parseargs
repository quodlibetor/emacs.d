# -*- mode: snippet -*-
# name: parseargs
# key: parseargs
# --
`(save-excursion
    (goto-char 0)
    (re-search-forward "\n\n")
    (backward-char)
    (insert "import argparse\n"))
`def parse_args():
    parser = argparse.ArgumentParser(
        description="$1")
    parser.add_argument("$2",
                        help="$3")
    $0
    return parser.parse_args()